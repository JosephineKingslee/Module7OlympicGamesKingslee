@model IEnumerable<Olympics>
@{
    ViewData["Title"] = "Olympic Games";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Categories</h3>
        <div class="list-group">
            @foreach (Category category in ViewBag.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@category.CategoryID"
                   asp-route-activeGameType="@ViewBag.ActiveGameType"
                   class="list-group-item @Active(category.CategoryID,
                                           ViewBag.ActiveCategory)">
                    @category.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Game Type</h3>
        <div class="list-group">
            @foreach (GameType gameType in ViewBag.GameTypes)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@ViewBag.ActiveCategory"
                   asp-route-activeGameType="@gameType.GameTypeID"
                   class="list-group-item @Active(gameType.GameTypeID,
                                           ViewBag.ActiveGameType)">
                    @gameType.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Olympics olympics in Model)
            {
                <li class="list-inline-item">
                    <img width="150" height="80" src="~/images/@olympics.FlagImage" alt="@olympics.Name"
                         title="@olympics.Name | @olympics.Category.Name @olympics.GameType.Name" />
                </li>
            }
        </ul>
    </div> 
</div>