@model OlympicsViewModel

@{
    ViewData["Title"] = "Olympics Details";
}

<h2 class="text-center">Country Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.olympics.FlagImage" alt="" />
                <h3>@Model.olympics.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Conference: @Model.olympics.Category.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Division: @Model.olympics.GameType.Name</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                    <a asp-action="Index" class="btn btn-primary"
                       asp-route-activeCategory="@Model.ActiveCategory"
                       asp-route-activeGameType="@Model.ActiveGameType">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>
                    <input type="hidden" asp-for="olympics.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>
